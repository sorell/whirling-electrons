void draw1bitData(uint8_t const *data, int x, int y, int w, int h)
{
	int pixels = w * h;

	display.setAddrWindow(x, y, w, h);
	display.startWrite();
	for(int i=pixels/8; i; --i) {
		uint8_t byte = pgm_read_byte_near(data);
		for (int bit=8; bit; --bit) {
			display.writePixel((byte & 1) ? WHITE : BLACK);
			byte >>= 1;
		}
		++data;
	}
	display.endWrite();
}


void draw2bitData(uint8_t const *data, uint16_t const *palette, int x, int y, int w, int h)
{
	int pixels = w * h;

	display.setAddrWindow(x, y, w, h);
	display.startWrite();
	for(int i=pixels/4; i; --i) {
		uint8_t byte = pgm_read_byte_near(data);
		display.writePixel(palette[byte & 0x3]);
		byte >>= 2;
		display.writePixel(palette[byte & 0x3]);
		byte >>= 2;
		display.writePixel(palette[byte & 0x3]);
		byte >>= 2;
		display.writePixel(palette[byte & 0x3]);
		++data;
	}
	display.endWrite();
}


void draw4bitData(uint8_t const *data, uint16_t const *palette, int x, int y, int w, int h)
{
	int pixels = w * h;

	display.setAddrWindow(x, y, w, h);
	display.startWrite();
	for(int i=pixels/2; i; --i) {
		uint8_t byte = pgm_read_byte_near(data);
		display.writePixel(palette[byte & 0xF]);
		display.writePixel(palette[byte >> 4]);
		++data;
	}
	display.endWrite();
}


void draw16bitData(uint16_t const *data, int x, int y, int w, int h)
{
	int pixels = w * h;

	display.setAddrWindow(x, y, w, h);
	display.startWrite();
	for(int i=pixels; i; --i) {
		display.writePixel(pgm_read_word_near(data));
		++data;
	}
	display.endWrite();
}





